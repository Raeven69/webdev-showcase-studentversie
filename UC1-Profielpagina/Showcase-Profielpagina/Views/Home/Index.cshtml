@{
    ViewData["Title"] = "Home Page";
}

<div class="page">
    <section class="personalia">

        <img class="person-logo" src="images/ik.jpg">
        <h1 class="person-name">Raeven van Dijk</h1>

    </section>

    <section class="profile-content">

        <div class="profile-content__category--hidden-mobile">
            <h3 class="profile-content__category-title">Profiel</h3>
        </div>

        <div class="profile-content__element--hidden-mobile">
            <div class="profile-content__element-header">
            </div>
            <p class="profile-content__description">
                Hallo ik ben Raeven en ik ben student HBO-ICT op Windesheim.
            <p>
        </div>

        <div class="profile-content__category--hidden-mobile">
            <h3 class="profile-content__category-title">Skills</h3>
            <ul>
                <li>Frontend Development</li>
                <li>Backend Development</li>
            </ul>
        </div>
        
        <div class="profile-content__category">
            <h3 class="profile-content__category-title">Opleidingen</h3>
            <hr>
        </div>

        <div class="profile-content__element">
            <div class="profile-content__element-header">
                <h4 class="profile-content__title">HBO-ICT</h4>
                <p class="profile-content__period">aug 2024 - heden</p>
            </div>
            <p class="profile-content__institute">Windesheim, Zwolle</p>
        </div>

        <div class="profile-content__element">
            <div class="profile-content__element-header">
                <h4 class="profile-content__title">Informatica</h4>
                <p class="profile-content__period">aug 2021 - jul 2024</p>
            </div>
            <p class="profile-content__institute">NHL Stenden, Emmen</p>
        </div>
    </section>
    <section class="gdpr-consent hide">

        <div class="gdpr-consent__description">
            <p>
                Deze website gebruikt cookies.
                We gebruiken cookies om content te personaliseren, voor social media en het analyseren
                van verkeer op de website, advertenties.
            </p>
        </div>

        <div class="gdpr-consent__choice">
            <button class="gdpr-consent__button--accept">Ja, natuurlijk</button>
            <button class="gdpr-consent__button--reject">Neu, misschien later</button>
        </div>

    </section>
</div>
